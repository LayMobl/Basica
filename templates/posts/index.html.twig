

{% block content1 %}

<div class="section section-breadcrumbs">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h1>Our blog</h1>
      </div>
    </div>
  </div>
</div>

    <div class="section">
    <div class="container">
    <div class="row">
      {% for post in posts %}
      <!-- Blog Post Excerpt -->
      <div class="col-sm-6">
        <div class="blog-post blog-single-post">
          <div class="single-post-title">
            <h2>{{ attribute(post, 'nom' ~ app.request.locale) }}</h2>
          </div>

          <div class="single-post-image">
            <img src="{{ asset('img/blog/'~ post.image ~ '')}}" alt="{{ attribute(post, 'nom' ~ app.request.locale) }}">
          </div>

          <div class="single-post-info">
            <i class="glyphicon glyphicon-time"></i>{{ post.date | date('d-m-Y') }} <a href="#" title="Show Comments"><i class="glyphicon glyphicon-comment"></i>11</a>
          </div>

          <div class="single-post-content">
            <p>
              {{attribute(post, 'texteone' ~ app.request.locale) | slice(0,250)}}...
            </p>
          <a href="{{path('app_posts_show', {id: post.id , slug: attribute(post, 'nom' ~ app.request.locale) | slugify})}}" class="btn">Read more</a>
          </div>
        </div>
      </div>
      <!-- End Blog Post Excerpt -->
      {% endfor %}


            <!-- Pagination -->

            <div class="pagination-wrapper ">
              <ul class="pagination pagination-sm">
                <li class="disabled"><a href="#">Previous</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">Next</a></li>
              </ul>
            </div>


    </div>
  </div>
  </div>

  {% endblock %}
