{#
  ./templates/works/liste.html.twig
  Variables disponibles:
    - works Array (id, nomfr, nomen, textefr, texteen, date, vitrine, imageName, client, Array Tags)
#}

<div class="section section-white">
  <div class="container">
    <div class="row">

      <div class="section-title">
        <h1>{{ 'accueil.titre' | trans }}</h1>
      </div>


      <ul class="grid cs-style-3">
        {% for work in works %}
        <div class="col-md-4 col-sm-6">
          <figure>
            <a href="{{path('app_works_show', {id: work.id , slug: attribute(work, 'nom' ~ app.request.locale) | slugify})}}">
              <img src="{{ asset('img/uploads/'~ work.imageName ~ '')}}" alt="{{'img/uploads/'~ work.imageName ~ ''}}">
            </a>
            <figcaption>
              <h3>{{ attribute(work, 'nom' ~ app.request.locale) }}</h3>
              <span>{{ work.client.nom }}</span>
              <a href="{{path('app_works_show', {id: work.id , slug: attribute(work, 'nom' ~ app.request.locale) | slugify})}}">{{ 'portfolio.look' | trans }}</a>
            </figcaption>
          </figure>
        </div>
        {% endfor %}
      </ul>
    </div>
  </div>
</div>
