{#
  ./templates/works/show.html.twig
  Variables disponibles:
    - works(id, titre, slug, texte, dateCreation)
#}

<section id="main-slider" class="no-margin">
  <div class="carousel slide">
      <ol class="carousel-indicators">
        {% for work in works %}
              <li data-target="#main-slider" data-slide-to="{{ loop.index }}" class="{% if loop.index == 1 %}active{% endif %}"></li>
        {% endfor %}
      </ol>
            <div class="carousel-inner">
               {% for work in works %}
                <div class="item {% if loop.index == 1 %}active{% endif %}" style="background-image: url({{asset('img/portfolio/'~ work.image ~ '')}}">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="carousel-content centered">
                                    <h2 class="animation animated-item-1">{{attribute(work, 'nom' ~ app.request.locale)}}</h2>
                                    <p class="animation animated-item-2">{{attribute(work, 'texte' ~ app.request.locale)}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!--/.item-->
                {% endfor %}

            </div><!--/.carousel-inner-->
        </div><!--/.carousel-->
        <a class="prev hidden-xs" href="#main-slider" data-slide="prev">
            <i class="icon-angle-left"></i>
        </a>
        <a class="next hidden-xs" href="#main-slider" data-slide="next">
            <i class="icon-angle-right"></i>
        </a>
    </section>
