{#
  ./templates/tags/show.html.twig
  Variables disponibles:
    - tag (id, nomfr, nomen, slugfr, slugen, Array(works))
#}

{% extends 'base.html.twig' %}

{% block title %}
  {{ attribute(tag, 'nom' ~ app.request.locale) }}
{% endblock %}

{% block content1 %}
  <div class="section section-breadcrumbs">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1>{{ 'tag.titre' | trans }}:
            {{ attribute(tag, 'nom' ~ app.request.locale) }}</h1>
        </div>
      </div>
    </div>
  </div>

  <div class="section">
    <div class="container">
      <div class="row">

        <ul class="grid cs-style-3">
          {% for work in tag.works %}
            <div class="col-md-4 col-sm-6">
              <figure>
                <a href="{{path('app_works_show', {id: work.id , slug: attribute(work, 'nom' ~ app.request.locale) | slugify})}}">
                  <img src="{{ asset('img/uploads/'~ work.imageName ~ '')}}" alt="{{'img/uploads/'~ work.imageName ~ ''}}">
                </a>
                <figcaption>
                  <h3>{{ attribute(work, 'nom' ~ app.request.locale) }}</h3>
                  <span>{{ work.client.nom }}</span>
                  <a href="{{path('app_works_show', {id: work.id , slug: attribute(work, 'nom' ~ app.request.locale) | slugify})}}">{{ 'portfolio.look' | trans }}</a>
                </figcaption>
              </figure>
            </div>
          {% endfor %}
        </ul>

      </div>
      </div>
      </div>

    {% endblock %}
